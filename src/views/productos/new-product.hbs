<div class="col-md-4 mx-auto">
   <div class="card text-center">
      <div class="card-header">
         <h3>Capturar producto</h3>
      </div>
      <div class="card-body">
         <form action="/productos/new-product" method="POST" enctype="multipart/form-data">
            <div class="form-group">
               <input type="text" name="nombre" class="form-control" placeholder="Titulo del libro" autofocus required>
            </div>
            {{!-- descripcion Corta --}}
            <div class="form-group">
               <textarea name="descripcion" placeholder="Descripcion corta" class="form-control" rows="4"
                  required></textarea>
            </div>
            {{!-- Descripcion Larga --}}
            <div class="form-group">
               <textarea name="descripcionCorta" placeholder="Descripcion larga" class="form-control" rows="4"
                  required></textarea>
            </div>
            {{!-- Autor del Libro --}}
            <div class="form-group">
               <input type="text" name="autor" class="form-control" placeholder="Autor del libro" required>
            </div>
            {{!-- stock --}}
            <div class="form-group">
               <input type="stock" class="form-control" placeholder="Cantidad" name="stock">
            </div>
            {{!-- precio --}}
            <div class="form-group">
               <div class="input-group mb-3">
                  <div class="input-group-prepend">
                     <span class="input-group-text">$</span>
                  </div>
                  <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)"
                     placeholder="Precio de libro" name="precio" required>
                  <div class="input-group-append">
                     <span class="input-group-text">.00</span>
                  </div>
               </div>
            </div>
            {{!-- categoria --}}
            <div class="input-group mb-3">
               <div class="input-group-prepend">
                  <label class="input-group-text" for="inputGroupSelect01">Options</label>
               </div>
               <select class="custom-select" id="inputGroupSelect01" name="categoria">
                  <option selected>Choose...</option>
                  <option value="emprendimiento">Emprendimiento</option>
                  <option value="administracion">Administracion</option>
                  <option value="superacionPersonal">Superacion Personal</option>
               </select>
            </div>
            {{!-- envio --}}
            {{!-- <div class="input-group mb-3">
               <div class="input-group-prepend">
                  <label class="input-group-text" for="inputGroupSelect01">Options</label>
               </div>
               <select class="custom-select" id="inputGroupSelect01" name="tipoEnvio">
                  <option selected>Choose...</option>
                  <option value="DHL">DHL</option>
                  <option value="Fedex">Fedex</option>
                  <option value="UPS">UPS</option>
               </select>
            </div> --}}
            {{!--  imagen--}}
            <div class="input-group mb-3">
               <div class="input-group-prepend">
                  <span class="input-group-text" id="inputGroupFileAddon01">Imagen</span>
               </div>
               <div class="custom-file">
                  <input type="file" class="custom-file-input" id="inputGroupFile01"
                     aria-describedby="inputGroupFileAddon01" name="imagen">
                  <label class="custom-file-label" for="inputGroupFile01"></label>
               </div>
            </div>
            {{!-- boton --}}
            <div class="form-group">
               <button class="btn btn-primary btn-block">
                  Guardar
               </button>
            </div>
         </form>
      </div>
   </div>
</div>